
@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Authentication;

<a class="btn btn-primary" asp-action="LogOut">Çıkış Yap</a>

<a class="btn btn-success" asp-action="GetRefreshToken">Refresh Token Yenile</a>
<h3>Bu sayfa sadece üye olan kullanıcılar görebilir</h3>

<h1>Claim Verileri</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Claim Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in User.Claims) 
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>

</table>

<h4>Authentication Verileri</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Auth property Key</th>
            <th>Auth property Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>

</table>
